{
  "name": "precocerto-backend",
  "version": "1.0.0",
  "description": "Backend API para PreçoCerto - Sistema de cupons e promoções",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "start:prod": "pm2 start ecosystem.config.cjs --env production",
    "stop:prod": "pm2 stop ecosystem.config.cjs",
    "reload:prod": "pm2 reload ecosystem.config.cjs",
    "monitor:prod": "pm2 monit",
    "dev:debug": "nodemon --inspect src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "setup": "node scripts/setup.js",
    "check": "node scripts/healthCheck.js",
    "db:migrate": "node scripts/runMigrations.js",
    "test:aliexpress": "node scripts/test-aliexpress-api.js",
    "test:shopee-product-offer": "node scripts/test-shopee-product-offer.js",
    "test:shopee-keyword": "node scripts/test-shopee-keyword-search.js",
    "test:shopee-offers": "node scripts/test-shopee-offers.js",
    "test:url-shortener": "node scripts/test-url-shortener.js",
    "test:approve-shorten": "node scripts/test-approve-with-shorten.js",
    "test:approve-endpoint": "node scripts/test-approve-endpoint.js",
    "test:approve-http": "node scripts/test-approve-http.js",
    "clean:data": "node scripts/cleanAllData.js",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/app.log | grep ERROR"
  },
  "keywords": [
    "api",
    "cupons",
    "promocoes",
    "afiliados"
  ],
  "author": "PreçoCerto",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "big-integer": "^1.6.52",
    "chalk": "^5.6.2",
    "cheerio": "^1.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.5",
    "grammy": "^1.39.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "open": "^11.0.0",
    "puppeteer": "^24.36.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.5",
    "telegram": "^2.26.22",
    "whatsapp-web.js": "github:pedroslopez/whatsapp-web.js#main",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
