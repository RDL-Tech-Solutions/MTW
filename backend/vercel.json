{
    "version": 2,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index.js"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/update-prices",
            "schedule": "*/15 * * * *"
        },
        {
            "path": "/api/cron/check-expired",
            "schedule": "*/30 * * * *"
        },
        {
            "path": "/api/cron/send-notifications",
            "schedule": "*/5 * * * *"
        },
        {
            "path": "/api/cron/monitor-expired",
            "schedule": "* * * * *"
        },
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 3 * * *"
        }
    ]
}