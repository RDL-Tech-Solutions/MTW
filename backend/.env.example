# ============================================
# MTW PROMO - BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copie este arquivo para .env e preencha com suas credenciais

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
HOST=0.0.0.0

# ============================================
# DATABASE - SUPABASE (PostgreSQL)
# ============================================
# Obtenha em: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ============================================
# SECURITY - JWT
# ============================================
# Gere chaves seguras para produção!
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CACHE - REDIS
# ============================================
# Opção 1: Local (Docker)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Opção 2: Upstash (Cloud - Recomendado)
# Obtenha em: https://upstash.com
REDIS_HOST=your_redis_host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=true

# ============================================
# AFFILIATE APIS
# ============================================

# Shopee Affiliate API
# Obtenha em: https://open.shopee.com
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key
SHOPEE_API_URL=https://partner.shopeemobile.com/api/v2

# Mercado Livre API
# Obtenha em: https://developers.mercadolivre.com.br
MELI_CLIENT_ID=your_meli_client_id
MELI_CLIENT_SECRET=your_meli_client_secret
MELI_ACCESS_TOKEN=your_meli_access_token
MELI_REFRESH_TOKEN=your_meli_refresh_token
MELI_API_URL=https://api.mercadolibre.com

# Amazon Associates (Futuro)
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_associate_tag

# ============================================
# PUSH NOTIFICATIONS
# ============================================
# Obtenha em: https://expo.dev/accounts/[account]/settings/access-tokens
EXPO_ACCESS_TOKEN=your_expo_access_token
EXPO_PROJECT_ID=your_expo_project_id

# ============================================
# SECURITY & RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# ============================================
# CRON JOBS & AUTOMATION
# ============================================
ENABLE_CRON_JOBS=true
PRICE_UPDATE_INTERVAL=*/15 * * * *
COUPON_CHECK_INTERVAL=0 */6 * * *
CLEANUP_INTERVAL=0 2 * * *

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ============================================
# CORS & SECURITY HEADERS
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:19006
ALLOWED_HOSTS=localhost

# ============================================
# ADMIN CREDENTIALS (Initial Setup Only)
# ============================================
ADMIN_EMAIL=admin@mtwpromo.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador

# ============================================
# BOTS - WHATSAPP (Meta Cloud API)
# ============================================
# Obtenha em: https://developers.facebook.com/apps
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/bots/whatsapp/webhook

# ============================================
# BOTS - TELEGRAM
# ============================================
# Obtenha em: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=@your_bot_username
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/bots/telegram/webhook

# ============================================
# FILE UPLOAD & STORAGE
# ============================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ============================================
# EMAIL (Futuro - SendGrid/Mailgun)
# ============================================
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@mtwpromo.com
EMAIL_FROM_NAME=MTW Promo

# ============================================
# ANALYTICS & MONITORING (Futuro)
# ============================================
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_BOTS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_CACHE=true

# ============================================
# DEVELOPMENT ONLY
# ============================================
DEBUG=false
MOCK_APIS=false
