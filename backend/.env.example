# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Shopee API Configuration
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key
SHOPEE_API_URL=https://partner.shopeemobile.com/api/v2

# Mercado Livre API Configuration
MELI_CLIENT_ID=your_meli_client_id
MELI_CLIENT_SECRET=your_meli_client_secret
MELI_ACCESS_TOKEN=your_meli_access_token
MELI_API_URL=https://api.mercadolibre.com

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN=your_expo_access_token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
ENABLE_CRON_JOBS=true
PRICE_UPDATE_INTERVAL=*/15 * * * *

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:19006

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@mtwpromo.com
ADMIN_PASSWORD=change_this_password

# WhatsApp Bot Configuration (Meta WhatsApp Cloud API)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
